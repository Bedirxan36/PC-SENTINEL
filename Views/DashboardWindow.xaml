<Window x:Class="SENTINEL.Views.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SENTINEL - DetaylÄ± Dashboard" 
        Height="900" Width="1600"
        Background="{StaticResource BackgroundBrush}"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True">
    
    <Window.Effect>
        <DropShadowEffect Color="Black" BlurRadius="40" ShadowDepth="0" Opacity="0.5"/>
    </Window.Effect>

    <Border CornerRadius="20" Background="{StaticResource BackgroundBrush}" BorderThickness="1" BorderBrush="#2D2D44">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0" Background="{StaticResource SurfaceBrush}" 
                    CornerRadius="20,20,0,0" Height="60" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid Margin="30,0">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="ðŸ“Š" FontSize="24"/>
                        <TextBlock Text="DetaylÄ± Dashboard" FontSize="18" FontWeight="Bold" 
                                   Foreground="{StaticResource TextPrimaryBrush}" Margin="15,0,0,0"/>
                    </StackPanel>
                    
                    <Button Content="âœ•" Width="40" Height="40" Click="CloseButton_Click"
                            Style="{StaticResource TitleBarButton}" HorizontalAlignment="Right"/>
                </Grid>
            </Border>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <Grid Margin="30">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- System Metrics -->
                    <Grid Grid.Row="0" Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- CPU Card -->
                        <Border Grid.Column="0" Style="{StaticResource ModernCard}" Margin="0,0,10,0">
                            <StackPanel>
                                <TextBlock Text="ðŸ’» CPU KULLANIMI" FontSize="12" 
                                           Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,15"/>
                                <TextBlock FontSize="36" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}">
                                    <Run Text="{Binding CpuUsage, StringFormat={}{0:F1}}"/><Run Text="%" FontSize="20"/>
                                </TextBlock>
                                <ProgressBar Value="{Binding CpuUsage}" Maximum="100" Height="8" 
                                             Margin="0,15,0,0" Background="#1E293B" 
                                             Foreground="{StaticResource PrimaryGradient}" BorderThickness="0"/>
                            </StackPanel>
                        </Border>

                        <!-- RAM Card -->
                        <Border Grid.Column="1" Style="{StaticResource ModernCard}" Margin="10,0">
                            <StackPanel>
                                <TextBlock Text="ðŸ§  RAM KULLANIMI" FontSize="12" 
                                           Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,15"/>
                                <TextBlock FontSize="36" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}">
                                    <Run Text="{Binding RamUsage, StringFormat={}{0:F1}}"/><Run Text="%" FontSize="20"/>
                                </TextBlock>
                                <ProgressBar Value="{Binding RamUsage}" Maximum="100" Height="8" 
                                             Margin="0,15,0,0" Background="#1E293B" 
                                             Foreground="{StaticResource SuccessGradient}" BorderThickness="0"/>
                            </StackPanel>
                        </Border>

                        <!-- Disk Card -->
                        <Border Grid.Column="2" Style="{StaticResource ModernCard}" Margin="10,0">
                            <StackPanel>
                                <TextBlock Text="ðŸ’¾ DÄ°SK KULLANIMI" FontSize="12" 
                                           Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,15"/>
                                <TextBlock FontSize="36" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}">
                                    <Run Text="{Binding DiskUsage, StringFormat={}{0:F1}}"/><Run Text="%" FontSize="20"/>
                                </TextBlock>
                                <ProgressBar Value="{Binding DiskUsage}" Maximum="100" Height="8" 
                                             Margin="0,15,0,0" Background="#1E293B" 
                                             Foreground="{StaticResource WarningBrush}" BorderThickness="0"/>
                            </StackPanel>
                        </Border>

                        <!-- Network Card -->
                        <Border Grid.Column="3" Style="{StaticResource ModernCard}" Margin="10,0,0,0">
                            <StackPanel>
                                <TextBlock Text="ðŸŒ AKTÄ°F BAÄžLANTI" FontSize="12" 
                                           Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,15"/>
                                <TextBlock Text="{Binding ActiveConnections}" FontSize="36" FontWeight="Bold" 
                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                                <TextBlock Text="BaÄŸlantÄ±" FontSize="12" 
                                           Foreground="{StaticResource TextSecondaryBrush}" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Recommendations -->
                    <Border Grid.Row="1" Style="{StaticResource ModernCard}" Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="ðŸ’¡ GÃœVENLÄ°K Ã–NERÄ°LERÄ°" FontSize="16" FontWeight="Bold" 
                                       Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,20"/>
                            <ItemsControl ItemsSource="{Binding Recommendations}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{StaticResource SurfaceBrush}" 
                                                CornerRadius="12" Padding="20" Margin="0,0,0,15">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <Border Grid.Column="0" Width="48" Height="48" CornerRadius="10" 
                                                        Background="#FEF2F2" VerticalAlignment="Top">
                                                    <TextBlock Text="âš¡" FontSize="24" 
                                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>

                                                <StackPanel Grid.Column="1" Margin="20,0">
                                                    <TextBlock Text="{Binding Title}" FontSize="15" FontWeight="SemiBold" 
                                                               Foreground="{StaticResource TextPrimaryBrush}"/>
                                                    <TextBlock Text="{Binding Description}" FontSize="13" 
                                                               Foreground="{StaticResource TextSecondaryBrush}" 
                                                               Margin="0,8,0,0" TextWrapping="Wrap"/>
                                                    <TextBlock Text="{Binding Category}" FontSize="11" 
                                                               Foreground="{StaticResource InfoBrush}" 
                                                               Margin="0,8,0,0"/>
                                                </StackPanel>

                                                <Border Grid.Column="2" Background="{StaticResource DangerBrush}" 
                                                        CornerRadius="8" Padding="12,6" VerticalAlignment="Top">
                                                    <TextBlock Text="{Binding Priority}" Foreground="White" 
                                                               FontSize="11" FontWeight="SemiBold"/>
                                                </Border>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                    <!-- Network Connections -->
                    <Border Grid.Row="2" Style="{StaticResource ModernCard}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                                <TextBlock Text="ðŸŒ AÄž BAÄžLANTILARI" FontSize="16" FontWeight="Bold" 
                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                                <Button Content="ðŸ”„ Yenile" Command="{Binding ViewNetworkCommand}"
                                        Background="{StaticResource InfoBrush}" Foreground="White"
                                        Padding="12,6" Margin="20,0,0,0" BorderThickness="0" 
                                        Cursor="Hand" FontSize="11">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" 
                                                                CornerRadius="8" Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </StackPanel>
                            
                            <ItemsControl ItemsSource="{Binding NetworkConnections}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{StaticResource SurfaceBrush}" 
                                                CornerRadius="10" Padding="16" Margin="0,0,0,10">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <Border Grid.Column="0" Background="{StaticResource InfoBrush}" 
                                                        CornerRadius="6" Padding="8,4">
                                                    <TextBlock Text="{Binding Protocol}" Foreground="White" 
                                                               FontSize="11" FontWeight="Bold"/>
                                                </Border>

                                                <StackPanel Grid.Column="1" Margin="15,0">
                                                    <TextBlock Foreground="{StaticResource TextPrimaryBrush}" FontSize="12">
                                                        <Run Text="{Binding LocalAddress}"/> â†’ <Run Text="{Binding RemoteAddress}"/>
                                                    </TextBlock>
                                                </StackPanel>

                                                <TextBlock Grid.Column="2" Text="{Binding State}" 
                                                           Foreground="{StaticResource SuccessBrush}" 
                                                           FontSize="11" FontWeight="SemiBold"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>
